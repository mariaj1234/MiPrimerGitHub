
#cadena de caracteres con lista inverida

l = ['Helena', 'Pablo', 'coche']
cadena_inversa = l[::-1]
print('la cadena inversa es:', cadena_inversa)

#Programa en Python que invierte las palabras de la lista invertida
def invertir(s):
    return s[::-1]

lista = ['paco','manolo', 'pepe']
x = list(map(invertir, lista[::-1]))
print(x)




#Otra forma:

l = ['jhon', 'julio', 'diego', 'Fernando']
lista_invertidos = [nombre[::-1] for nombre in l[::-1]]
print(lista_invertidos)
